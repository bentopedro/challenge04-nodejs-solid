            "post":{
                "tags":["Users"],
                "summary": "Create a users account",
                "description": "Create a new users account",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name": {
                                        "type":"string"
                                    },
                                    "email": {
                                        "type":"string"
                                    }
                                },
                                "examples":{
                                    "name":"Username",
                                    "description":"Email address"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201":{
                        "description": "Created"
                    },
                    "500":{
                        "description": "User could not be created"
                    }
                }
            }
        }
